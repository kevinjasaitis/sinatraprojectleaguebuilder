<h3>Edit Your Build</h3>

<% if @build.errors.any? %>
  <div id="error">
    <h3><%= @build.errors.count %> error(s) prohibited the edit of your build :</h3>
 
    <ul>
      <% @build.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<form method="post" action="/builds/<%= @build.id %>">
    <p><input id="hidden" type="hidden" name="_method" value="patch">

    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= @build.title %>"><br><br>

    <label for="description">Enter a few sentences that describe your build:</label><br>
    <textarea id="description" name="description" rows="10" cols="40"><%= @build.description %></textarea><br><br>

    <label for="price">Price:</label>$ 
    <input type="text" id="price" name="price" value="<%= @build.price %>"><br><br>

    <label for="image">Link to Image:</label><br>
    <input type="text" id="image" name="image" value="<%= @build.image %>" size="47"><br><br>

    <button type="submit" alt="Edit Build"><img src="/photos/submit.png" width=55></button></p>
</form> 

<p class="center"><a href="/builds/<%= @build.id %>">Back to Build</a> || <a href="/builds">View All Items</a></p>
<p class="center">Go back to <a href='/'>Main Page</a></p>
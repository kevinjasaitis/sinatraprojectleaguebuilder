<h3><%= current_user.username %> create a new build!</h3>

<% if @build.errors.any? %>
  <div id="error">
    <h2><%= @build.errors.count %> error(s) prohibited new build creation:</h2>
 
    <ul>
    <% @build.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <form action='/builds' method="post">
    <p><label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= @build.title %>"><br><br>

    <label for="description">Enter a few sentences that describe your build:</label><br>
    <textarea id="description" name="description" rows="10" cols="40" ><%= @build.description %></textarea><br><br>

    <label for="price">Price:</label> $
    <input type="text" id="price" name="price" placeholder="x.xx" value="<%= @build.price %>"><br><br>

    <label for="image">Link to Image:</label><br>
    <input type="text" id="image" name="image" size="47" value="<%= @build.image %>"><br><br>

    <button type="submit" alt="Submit"><img src="/photos/submit.png" width=55></button></p>
  </form>
  
<p class="center"><a href="/builds">Browse All Builds</a> || <a href='/'>Main Page</a></p>


 